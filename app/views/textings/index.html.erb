<div id="texting-id" data-texting-id="<%= @texting.try(:id) %>"></div>
<div id="user-id" data-user-id="<%= current_user.id %>"></div>

<div class="container mx-auto">
  <div class="grid grid-cols-3">
    <%# 聯絡訊息列表 %>
      <%= render 'form', texting: Texting.new %>
      <hr>
      <% @textings.each do |texting| %>
        <%= link_to texting do %>
          <div class="card mb-3">
            <div class="card-body">
              <%= texting.name %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <%# 聊天視窗 %>
    <div class="col-span-2">
      <% if @texting.present? %>
        <div class="chat-texting">
          <nav class="navbar navbar-light bg-light mb-4">
            <span class="navbar-brand" href='#'><%= @texting.name %></span>
            <ul class="navbar-nav">
              <li class="nav-item">
                Hello, <%= current_user.username %>
              </li>
            </ul>
          </nav>
          <% @texting.messages.each do |message| %>
            <div id="messages">
              <%= render 'messages/message', message: message %>
            </div>
          <% end %>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new, texting: @texting %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
