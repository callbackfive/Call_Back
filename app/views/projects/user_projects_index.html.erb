<section class="owner-projects-status w-full">
  <div class="status-container mx-auto" style="max-width:1090px">
    <div class="status-row flex flex-col space-y-4">
    <% if @user_projects.blank? %> 
      <div>你沒有任何提案紀錄</div>
 <% else %>
      <div class="status-item space-y-4">
        <h2 class="text-center text-red-500 font-medium text-2xl ">募資中專案列表</h2>
          <table class="w-full"> 
          <thead>
            <tr>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider">專案標題</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left  leading-4 text-red-500 tracking-wider">專案狀態</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider"></th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider"></th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider"></th>
              </tr>
          </thead>
          <tbody class="bg-white">
            <% @user_projects.each do |user_project| %>
              <% if user_project.is_published? %>
                <tr>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                    <div class="flex items-center"><div>
                    <div class="text-sm leading-5 text-red-500"><%= user_project.title %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                    <div class="text-sm leading-5 text-red-500"><%= user_project.status_to_string %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                      <button class="px-5 py-2 border-red-500 border text-red-500 rounded transition duration-300 hover:bg-red-400 hover:text-white focus:outline-none"><%= link_to "修改", edit_project_path(user_project) %></button>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                      <button class="px-5 py-2 border-red-500 border text-red-500 rounded transition duration-300 hover:bg-red-400 hover:text-white focus:outline-none"><%= link_to "專案頁面", user_project %></button>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                      <button class="px-5 py-2 border-red-500 border text-red-500 rounded transition duration-300 hover:bg-red-400 hover:text-white focus:outline-none"><%= link_to "贊助訂單列表", myorderlist_project_path(user_project)%></button>
                  </td>
                </tr>
              <% end %>
           <% end %>
          </tbody>
        </table>
      </div>
      <div class="status-item space-y-4">
        <h2 class="text-center text-red-500 font-medium text-2xl ">已達標專案列表</h2>
        <table class="w-full">   
          <thead>
            <tr>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider">專案標題</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left  leading-4 text-red-500 tracking-wider">專案狀態</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider"></th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider"></th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider"></th>
              </tr>
          </thead>
          <tbody class="bg-white">
            <% @user_projects.each do |user_project| %>
              <% if user_project.succeeded? %>
                <tr>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                    <div class="flex items-center"><div>
                    <div class="text-sm leading-5 text-red-500"><%= user_project.title %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                    <div class="text-sm leading-5 text-red-500"><%= user_project.status_to_string %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                      <button class="px-5 py-2 border-red-500 border text-red-500 rounded transition duration-300 hover:bg-red-400 hover:text-white focus:outline-none"><%= link_to "修改", edit_project_path(user_project) %></button>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                      <button class="px-5 py-2 border-red-500 border text-red-500 rounded transition duration-300 hover:bg-red-400 hover:text-white focus:outline-none"><%= link_to "專案頁面", user_project %></button>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                      <button class="px-5 py-2 border-red-500 border text-red-500 rounded transition duration-300 hover:bg-red-400 hover:text-white focus:outline-none"><%= link_to "贊助訂單列表", myorderlist_project_path(user_project)%></button>
                  </td>
                </tr>
              <% end %>
           <% end %>
          </tbody>
        </table>
      </div>
      <div class="status-item space-y-4">
      <h2 class="text-center text-red-500 font-medium text-2xl ">草稿</h2>
        <table class="w-full">   
          <thead>
            <tr>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider">專案標題</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left  leading-4 text-red-500 tracking-wider">專案狀態</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider"></th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider"></th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider"></th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-red-500 tracking-wider"></th>
              </tr>
          </thead>
          <tbody class="bg-white">
            <% @user_projects.each do |user_project| %>
              <% if user_project.is_hidden? %>
                <tr>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                    <div class="flex items-center"><div>
                    <div class="text-sm leading-5 text-red-500"><%= user_project.title %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                    <div class="text-sm leading-5 text-red-500"><%= user_project.status_to_string %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                      <button class="px-5 py-2 border-red-500 border text-red-500 rounded transition duration-300 hover:bg-red-400 hover:text-white focus:outline-none"><%= link_to "修改", edit_project_path(user_project) %></button>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                      <button class="px-5 py-2 border-red-500 border text-red-500 rounded transition duration-300 hover:bg-red-400 hover:text-white focus:outline-none"><%= link_to "專案頁面", user_project %></button>
                  </td>
                   <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                      <button class="px-5 py-2 border-red-500 border text-red-500 rounded transition duration-300 hover:bg-red-400 hover:text-white focus:outline-none"><%= link_to "刪除", user_project, method: 'delete' %></button>
                  </td>
                </tr>
              <% end %>
           <% end %>
          </tbody>
        </table>
      </div>
 <% end %>
    
    </div>
  </div>
</section>



