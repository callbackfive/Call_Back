<div>
  <% if user_signed_in? %>
    <div>
      <%= current_user.name %>
    </div>
    <div>
      <%= link_to '登出', destroy_user_session_path, method: "delete" %>
    </div>
    <div>
      <%= link_to '個人頁面', profile_users_path %>
    </div>
    <div>
      <%= link_to '您的提案列表', user_projects_path(current_user) %>
    </div>
    <div>
      <%= link_to '聯絡訊息', dialogboxes_path %>
    </div>
  <% else %>
    <%= link_to '註冊', new_user_registration_path %>
    <%= link_to '登入', new_user_session_path %>
  <% end %>
</div>

<h1 class="text-xl text-green-500">專案列表</h1>

<%= link_to "提案", new_project_path, class: "text-blue-300  hover:text-white px-3 py-2 rounded-md text-large font-medium" %>

<ul>
  <% @projects.each do |project| %>
    <li>
      <%= link_to project.title, project %>
    </li>
  <% end %>
</ul>