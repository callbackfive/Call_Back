<h1>募資專案頁(show)</h1>
<div>專案名稱： <%= @project.title %></div>
<div>專案類別： <%= @project.category %></div>
<div>內容摘要： <%= @project.summary %></div>
<div>專案內容： <%= @project.content %></div>
<div>募資目標： <%= @project.target_amount %></div>

<%# -----texting-----%>
<div><%= link_to '聯絡提案人', project_textings_path(@project), id: 'new-texting-link', data: {popup: true} %></div>

<div class="new-texting-popup">
  <div class="popup-content">
    <div>提案人： <%= @project.user.name %></div>
    <hr>
    <div class="message-guiding">傳訊息給 <%= @project.user.name %></div>
    <%= render 'textings/form', texting: Texting.new, project: @project, user: current_user %>   
  </div>
</div>

<%# -----giveback-----%>
<div>
  <ul>
    <% @givebacks.each do |g| %>
      <li>回饋商品： <%= g.title %></li>
      <li>商品價格： <%= g.price %>元</li>
    <%end%>
  </ul>
</div>
<br>

<%# -----comment-----%>
<h3>---留言區---</h3>
<% if user_signed_in? %>
  <%= form_with model: Comment.new, url: project_comments_path(@project) do |f| %>
    <div>
      <%= f.text_area :content, placeholder: '請留言' %>
    </div>
    <%= f.submit '送出' %>
  <% end %>
<% end %>

<%# 渲染comment跟reply的畫面 %>
<%= render @project.comments, comment: @comment %>


<div>
  <% if project_owner? %>
    <%= link_to "編輯此專案", edit_project_path(@project) %>
  <% end %>
</div>

<div>
  <%= link_to '回探索（專案列表）', projects_path %></h2>
</div>