
<div class="container mt-10">
  <div class="my-3 font-medium text-md text-gray-500 ">
    <h1>個人頁面</h1>
  </div>

  <section class="flex">

    <div>
      <%= image_tag current_user.image_url,class:"h-40 w-40 rounded-full m-auto" if current_user.image_url.present? %>
    </div>
    

    <div class="pl-5">
      <div class="mt-3 font-medium text-md text-gray-500">顯示名稱:<br>
        <%= current_user.name %>
      </div>
      <div class="mt-3 font-medium text-md text-gray-500">Email:<br>
        <%= current_user.email %>
    </div>

  </section>
  <div class="flex">
    <div>
      <button class="hover:bg-red-600 rounded flex mt-5 text-white bg-red-500 border-0 py-1 px-3 focus:outline-none hover:bg-red-600 text-sm">
      <%= link_to '編輯個人資料', edit_user_registration_path %><br/>
      </button>
    </div>
    <div>
      <button class="hover:bg-red-600 rounded flex mt-5 ml-3 text-white bg-red-500 border-0 py-1 px-3 focus:outline-none hover:bg-red-600 text-sm">
        <%= link_to '您的提案記錄', user_projects_path(current_user) %>
      </button>
    </div>
    <div>
      <button class="hover:bg-red-600 rounded flex mt-5 ml-3 text-white bg-red-500 border-0 py-1 px-3 focus:outline-none hover:bg-red-600 text-sm">
        <%= link_to '您的贊助記錄', user_orders_path(current_user) %>
      </button>
    </div>
    <div>
      <button class="hover:bg-red-600 rounded flex mt-5 ml-3 text-white bg-red-500 border-0 py-1 px-3 focus:outline-none hover:bg-red-600 text-sm">
        <%= link_to '追蹤專案列表', my_favorite_projects_path %>
      </button>
    </div>
  </div>
</div>