<div class="text-xs">
  <div class="text-center">
    <h1 class="text-xl mb-3">專案類別清單</h1>
    <%= link_to '新增category', new_admin_category_path, class:"bg-blue-200 rounded p-1"%>
    <p id="notice"><%= notice %></p>
  </div>

  <div class="my-2 py-2 flex justify-center">
      <div class="mt-6 inline-block px-8 pt-3">
        <table class="w-full">
          <thead>
            <tr>
              <th class="admin_th">類別名稱</th>
              <th class="admin_th", colspan="3">操作</th>
            </tr>
          </thead>

          <tbody>
            <% @admin_categories.each do |category| %>
              <tr>
                <td class="admin_td"><%= category.title %></td>
                <td class="ud_btn"><%= link_to 'Edit', edit_admin_category_path(category) %></td>
                <td class="ud_btn"><%= link_to 'Destroy', category, method: :delete %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
