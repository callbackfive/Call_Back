<div>
  <div class="text-center">
    <h1 class="text-xl mb-1">Order清單</h1>
    <%= link_to '新增order', new_admin_order_path, class:"bg-blue-200 rounded p-1"%>
    <p id="notice"><%= notice %></p>
  </div>
    <div class="my-2 py-2 flex justify-center">
      <div class="inline-block px-8">
      <table class="w-full">
        <thead>
          <tr>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">ID</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">訂單編號</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">訂單狀態</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">專案名稱</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">專案ID</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">商品名稱</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">商品價格</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">商品id</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">成立日期</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">購買人名稱</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">郵遞區號</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">地址</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">電話</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider">email</th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-center leading-4 text-blue-500 tracking-wider", colspan="3">操作</th>
          </tr>
        </thead>

        <tbody>
          <% @admin_orders.each do |order| %>
            <tr>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.id %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.merchantOrderNo %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.status %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.project_title %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.project.id %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.giveback_title %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.giveback.price %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.giveback.id %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.issue_date %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.full_name %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.zip %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.address %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.phone %>
              </td>
              <td class="text-center px-6 py-4 border-b border-gray-500">
                <%= order.email %>
              </td>
              <div class="">
                <td class="text-center px-6 py-4 border-b border-gray-500">
                  <%= link_to 'Edit', edit_admin_order_path(order) %>
                </td>
                <td class="text-center px-6 py-4 border-b border-gray-500">
                  <%= link_to 'Destroy', order_path, method: :delete %>
                </td>
              </div>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>