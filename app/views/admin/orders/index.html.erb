<div class="text-xs">
  <div class="text-center">
    <h1 class="text-xl mb-1">Order清單</h1>
    <%= link_to '新增order', new_admin_order_path, class:"bg-blue-200 rounded p-1"%>
    <p id="notice"><%= notice %></p>
  </div>
    <div class="my-2 py-2 flex justify-center">
      <div class="inline-block px-8">
      <table>
        <thead>
          <tr>
            <th class="admin_th"><%= sort_link(@q, :id, 'ID') %></th>
            <th class="admin_th"><%= sort_link(@q, :merchantOrderNo, '訂單編號') %></th>
            <th class="admin_th"><%= sort_link(@q, :status, '訂單狀態') %></th>
            <th class="admin_th"><%= sort_link(@q, :project_title, '專案名稱') %></th>
            <th class="admin_th"><%= sort_link(@q, :project_id, '專案ID') %></th>
            <th class="admin_th"><%= sort_link(@q, :giveback_title, '商品名稱') %></th>
            <th class="admin_th"><%= sort_link(@q, :giveback_price, '商品價格') %></th>
            <th class="admin_th"><%= sort_link(@q, :giveback_id, '商品ID') %></th>
            <th class="admin_th"><%= sort_link(@q, :issue_date, '成立日期') %></th>
            <th class="admin_th"><%= sort_link(@q, :full_name, '購買人名稱') %></th>
            <th class="admin_th"><%= sort_link(@q, :zip, '郵遞區號') %></th>
            <th class="admin_th"><%= sort_link(@q, :address, '地址') %></th>
            <th class="admin_th"><%= sort_link(@q, :phone, '電話') %></th>
            <th class="admin_th"><%= sort_link(@q, :email, 'email') %></th>
            <th class="admin_th", colspan="3">操作</th>
          </tr>
        </thead>

        <tbody>
          <% @admin_orders.each do |order| %>
            <tr>
              <td class="admin_td">
                <%= order.id %>
              </td>
              <td class="admin_td">
                <%= order.merchantOrderNo %>
              </td>
              <td class="admin_td">
                <%= order.status %>
              </td>
              <td class="admin_td">
                <%= order.project_title %>
              </td>
              <td class="admin_td">
                <%= order.project.id %>
              </td>
              <td class="admin_td">
                <%= order.giveback_title %>
              </td>
              <td class="admin_td">
                <%= order.giveback.price %>
              </td>
              <td class="admin_td">
                <%= order.giveback.id %>
              </td>
              <td class="admin_td">
                <%= order.issue_date %>
              </td>
              <td class="admin_td">
                <%= order.full_name %>
              </td>
              <td class="admin_td">
                <%= order.zip %>
              </td>
              <td class="admin_td">
                <%= order.address %>
              </td>
              <td class="admin_td">
                <%= order.phone %>
              </td>
              <td class="admin_td">
                <%= order.email %>
              </td>
              <div class="">
                <td class="ud_btn">
                  <%= link_to 'Edit', edit_admin_order_path(order) %>
                </td>
                <td class="ud_btn">
                  <%= link_to 'Destroy', admin_order_path(order), method: :delete %>
                </td>
              </div>
            </tr>
          <% end %>
        </tbody>
      </table>
      <p><%= @admin_orders.count %> orders</p>
    </div>
  </div>
</div>