<div class="admin-show-container">
  <div>
    <%= link_to 'Edit', edit_admin_user_path(@admin_user) %> |
    <%= link_to 'Back', admin_users_path %>
  </div>
  <section>
    <div>
      <%= image_tag @admin_user.image_url,class:"h-40 w-40 rounded-full m-auto" if @admin_user.image_url.present? %>
      <div class="mt-3 font-medium text-xl text-gray-500">顯示名稱:<br>
        <%= @admin_user.name %>
      </div>
      <div class="mt-3 font-medium text-xl text-gray-500">Email:<br>
        <%= @admin_user.email %>
      </div>
      <div class="mt-3 font-medium text-xl text-gray-500">Role:<br>
        <%= @admin_user.role %>
      </div>
    </div>
  </section>
</div>
