<% if @user_orders.blank? %> 
  <div>你沒有任何贊助紀錄</div>
<% else %>
<% end %>

<div class="mt-24"></div>
<div class="flex justify-center space-x-4">
  <h2 class="text-center font-semibold text-3xl lg:text-4xl text-gray-800">您的贊助紀錄</h2>
  <%= link_to user_orders_path( current_user, format: :csv) do %>
    <div class="text-center font-semibold text-3xl lg:text-4xl", style= "color:#EF5959;">
      <i class="fas fa-cloud-download-alt"></i>
    </div>
  <%end%>
</div>


<!-- component -->
<div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 pr-10 lg:px-8">
    <div class="align-middle rounded-tl-lg rounded-tr-lg inline-block w-full py-4 overflow-hidden bg-white shadow-lg px-12"></div>
      <div class="align-middle inline-block min-w-full shadow overflow-hidden bg-white shadow-dashboard px-8 pt-3 rounded-bl-lg rounded-br-lg">
         <table class="min-w-full">
          <thead>
              <tr>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider">專案名稱</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider">回饋品名稱</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider">訂單編號</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider">贊助金額</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider">付款時間</th>
                <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-blue-500 tracking-wider">訂單狀態</th>
              </tr>
          </thead>
          <tbody class="bg-white">
            <% @user_orders.each do |user_order| %>
              <% if user_order.user_id == current_user.id %>
                <tr>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                    <div class="flex items-center"><div>
                      <div class="text-sm leading-5 text-gray-800"><%= user_order.project_title%></div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                    <div class="text-sm leading-5 text-blue-900"><%= link_to user_order.giveback_title, current_user %></div>
                      </td>
                    <td class="px-6 py-4 whitespace-no-wrap border-b text-blue-900 border-gray-500 text-sm leading-5"><%= user_order.merchantOrderNo%></td>
                    <td class="px-6 py-4 whitespace-no-wrap border-b text-blue-900 border-gray-500 text-sm leading-5"><%= user_order.giveback_price%></td>
                    <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500 text-blue-900 text-sm leading-5"><%= user_order.issue_date&.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
                    <td class="px-6 py-4 whitespace-no-wrap border-b text-blue-900 border-gray-500 text-sm leading-5">
                        <span class="relative inline-block px-3 py-1 font-semibold text-green-900 leading-tight">
                        <span aria-hidden class="absolute inset-0 bg-green-200 opacity-50 rounded-full"></span>
                        <span class="relative text-xs"><%= user_order.status_to_string%></span>
                          </span>
                    </td>               
                </tr>
              <% end %>
            <% end %>
          </tbody>
              </table>
                 
      
    </div>
</div>