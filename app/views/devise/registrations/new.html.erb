<h2>會員註冊</h2>

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="m-3">
    <%= f.label :name, '顯示名稱' %><br />
    <%= f.text_field :name %>
  </div>

  <div class="m-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="m-3">
    <%= f.label :password, '請輸入密碼' %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "最少六碼" %>
  </div>

  <div class="m-3">
    <%= f.label :password_confirmation, '請再次輸入密碼' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="m-3">
    <%= f.label :image, '新增個人照片' %><br>
    <%= f.file_field :image, id: :user_image %>
  </div> 

  <div class="actions">
    <%= f.submit "註冊" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= link_to '回首頁', root_path %>
