<h2 class="text-center mt-5 text-lg">註冊</h2>
<div class="container py-3 mx-auto flex content-center">

  <%= devise_error_messages! %>
  <div class="w-1/3 bg-gray-100 rounded-lg p-8 flex flex-col mx-auto mt-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="mt-3">
        <%= f.label :name, '顯示名稱', class:"leading-7 text-md text-gray-600" %><br />
        <%= f.text_field :name, class:"rounded w-full" %>
      </div>

      <div class="mt-3">
        <%= f.label :email, class:"leading-7 text-md text-gray-600" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"rounded w-full" %>
      </div>

      <div class="mt-3">
        <%= f.label :password, '請輸入密碼', class:"leading-7 text-md text-gray-600" %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "最少六碼", class:"rounded w-full" %>
      </div>

      <div class="mt-3">
        <%= f.label :password_confirmation, '請再次輸入密碼', class:"leading-7 text-md text-gray-600" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"rounded w-full" %>
      </div>

      <div class="actions">
        <%= f.submit "註冊", class:"mt-3 ext-center w-full text-white bg-red-500 border-0 py-1 px-1 focus:outline-none hover:bg-red-600 rounded text-md" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

      <p class="text-center leading-7 text-md text-gray-600">您已經有Callback帳號？</p>
      <%= link_to "登入", new_session_path(resource_name), class:"text-center w-full text-white bg-red-500 border-0 py-1 px-1 focus:outline-none hover:bg-red-600 rounded text-md" %><br />
  </div>
</div>
