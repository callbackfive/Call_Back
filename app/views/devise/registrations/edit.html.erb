<h2 class="text-center mt-5 text-lg">編輯個人資料</h2>
<div class="container py-3 mx-auto flex justify-center">
  <div class="w-1/3 bg-gray-100 rounded-lg p-8 flex flex-col mx-auto mt-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.label "顯示名稱" %><br/>
      <%= f.text_field :name, placeholder: current_user.name %>

      <div>
        <%= f.label :image, '個人照片' %>
        <%= f.file_field :image, id: :user_image %>
      </div> 

      <div class="field">
        <%= f.label '密碼' %> <i>(如果不想更新密碼可略過)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: '最少六碼' %>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>

    <%= link_to "回個人頁面", profile_users_path %>
  </div>
  
</div>
