<% if alert %>
  <p class="alert text-center bg-red-100 p-8 text-xl"><%= alert %></p>
<% end %>

<h2 class="text-center mt-5 text-lg">登入</h2>
<div class="container py-3 mx-auto flex content-center">

  <div class="w-1/3 bg-gray-100 rounded-lg p-8 flex flex-col mx-auto mt-3">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mt-3">
        <%= f.label :email, class:"leading-7 text-md text-gray-600" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
        class:"rounded w-full" %>
      </div>

      <div class="field mt-3">
        <%= f.label :password, '請輸入密碼', class:"leading-7 text-md text-gray-600" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"rounded w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :記住我的登入狀態 %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "登入", class:"mt-3 ext-center w-full text-white bg-red-500 border-0 py-1 px-1 focus:outline-none hover:bg-red-600 rounded text-md" %>
      </div>

    <% end %>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "登入#{OmniAuth::Utils.camelize(provider)}帳號", omniauth_authorize_path(resource_name, provider), class:"mt-3 text-center text-white bg-blue-500 border-0 py-1 px-1 focus:outline-none hover:bg-blue-600 rounded text-lg" %><br />
      <% end %>
    <% end %>

    <p class="text-center leading-7 text-md text-gray-600">您還沒有註冊？</p>
    <%= render "devise/shared/links" %>
      

  </div>
</div>

